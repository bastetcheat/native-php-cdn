RewriteEngine On

# ─── Block direct access to sensitive directories ───
RewriteRule ^db/ - [F,L]
RewriteRule ^includes/ - [F,L]
RewriteRule ^uploads/ - [F,L]

# ─── Public file endpoints ───
RewriteRule ^files/metadata/(.+)$ public_file.php?action=metadata&file=$1 [L,QSA]
RewriteRule ^files/download/(.+)$ public_file.php?action=download&file=$1 [L,QSA]

# ─── API routing ───
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/(.*)$ api/router.php [L,QSA]

# ─── Admin SPA (now index.php for cache-busting support) ───
RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/index\.html$ admin/index.php [R=301,L]

# ─────────────────────────────────────────────────────
# Cache-Control headers
# ─────────────────────────────────────────────────────
<IfModule mod_headers.c>
    # Security headers (applied to every response)
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # ── Admin JS/CSS: no-cache so Cloudflare always revalidates ──────────
    # The filemtime ?v= query string in index.php ensures Cloudflare fetches
    # a new copy whenever the file changes, while ETag/Last-Modified let it
    # serve from its cache without re-downloading when nothing changed.
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # ── HTML/PHP pages: always revalidate (no stale admin UI) ────────────
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "no-cache, must-revalidate"
    </FilesMatch>

    # ── API responses: never cache ────────────────────────────────────────
    <FilesMatch "router\.php$">
        Header set Cache-Control "no-store, no-cache, must-revalidate"
        Header set Pragma "no-cache"
    </FilesMatch>
</IfModule>

# Disable directory browsing
Options -Indexes
